{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src/*"]
    },
    "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node", "@types/jest"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
